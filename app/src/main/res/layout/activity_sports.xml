<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sport"
    android:gravity="center"
    tools:context=".Sports">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:id="@+id/spq"
        >
        <LinearLayout
            android:background="@drawable/spqn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
    <TextView
        android:padding="5dp"
        android:textSize="20dp"
        android:id="@+id/squestion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#D32F2F"
        android:textStyle="bold" /></LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:id="@+id/sp1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/options"
            android:gravity="center">
    <TextView
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/soption1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:id="@+id/sp2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/options"
            android:gravity="center">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/soption2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:id="@+id/sp3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/options"
            android:gravity="center">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/soption3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:id="@+id/sp4"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/options"
            android:gravity="center">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/soption4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sbutn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0288D1"
            android:text="Menu"/>

        <Button
            android:id="@+id/sbutn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:backgroundTint="#0288D1"
            android:text="Next"/>
    </LinearLayout>
</LinearLayout>