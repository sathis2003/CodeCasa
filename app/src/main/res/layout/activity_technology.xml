<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tech"
    android:gravity="center"
    tools:context=".Technology">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/thq"
        app:cardCornerRadius="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
    <TextView
        android:padding="5dp"
        android:background="@drawable/technologybg"
        android:textSize="20dp"
        android:id="@+id/tquestion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#4916C5"
        android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/th1"
        >
        <LinearLayout
            android:background="@drawable/options"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/toption1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/th2"
        >
        <LinearLayout
            android:background="@drawable/options"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/toption2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/th3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/options"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/toption3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/th4"
        >
        <LinearLayout
            android:background="@drawable/options"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/toption4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tbutn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0288D1"
            android:text="Menu"/>

        <Button
            android:id="@+id/tbutn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:backgroundTint="#0288D1"
            android:text="Next"/>
    </LinearLayout>
</LinearLayout>